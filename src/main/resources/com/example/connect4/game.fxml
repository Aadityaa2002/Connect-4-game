<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="OverallGame" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.connect4.HelloController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
        <Pane fx:id="DiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
        <VBox style="-fx-background-color: #000000;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
            <TextField fx:id="Player_1Name" promptText="Enter Player 1 Name" />
            <TextField fx:id="Player_2Name" promptText="Enter Player 2 Name" />
            <Button fx:id="setNames" mnemonicParsing="false" prefHeight="26.0" prefWidth="305.0" text="Set Names" />
                <Region prefHeight="181.0" prefWidth="306.0" VBox.vgrow="ALWAYS" />
                <Label fx:id="PlayerName" alignment="CENTER" prefHeight="40.0" prefWidth="300.0" text="Player One" textFill="#5bb23b">
                    <font>
                        <Font name="Times New Roman Bold" size="36.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" prefHeight="28.0" prefWidth="303.0" text="Turn" textFill="#5bb23b">
                    <font>
                        <Font name="Times New Roman Bold" size="24.0" />
                    </font></Label>
                <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</GridPane>
